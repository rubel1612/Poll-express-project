<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"
     href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
     integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" 
     crossorigin="anonymous">
    <title>create pull</title>
</head>
<body>
    <div class="container">
        <div class="card" style="width: 24rem; margin-top: 20px; margin-left: 40%;">
            <div class="card-body">
              <h3 class="card-title">Create a new Poll</h3>
              <form action="/createPoll" method="post">
                <div class="form-group">
                  <label>Enter Title</label>
                  <input type="text" class="form-control" name="title" id="inputTitle">
                  
                </div>
                <div class="form-group">
                    <label >Enter Description</label>
                    <textarea  class="form-control" name="description" id="inputDescription" >
                      </textarea>
                </div>

                <div id="options">
                  <label >Enter Your Option</label>

                  <div class="form-group">
                    <input type="text" class="form-control mb-2" name="option" id="option-1" placeholder="option-1">
                </div>

                <div class="form-group">
                  <input type="text" class="form-control mb-2" name="option" id="option-2" placeholder="option-2">
              </div>

                </div>
              
                <button class="btn btn-secondary" id="addOption">
                    Add More Option
                </button>
                 <br><br>
                <button type="submit" class="btn btn-primary" value="create poll">
                    Submit
                </button>
              </form>
              
            </div>
          </div>
    </div>
    
  
<script>
  let option = document.getElementById('options')
  let addElement = document.getElementById('addOption')

  let createOptionNumber = 3

  addElement.addEventListener('click',function(e){
            e.preventDefault()
             let newOption = createNewOption()
            option.appendChild(newOption)
  })


  function createNewOption(){

      let div = document.createElement('div')
      div.className = "form-group"

      let input = document.createElement('input')
      input.type = "text"
      input.className= "form-control mb-2" 
      input.name = "option"
      input.placeholder = "option-"+createOptionNumber++

      div.appendChild(input)

      return div 
  }

</script>

